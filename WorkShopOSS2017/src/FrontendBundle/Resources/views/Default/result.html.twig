<body>
<div class="container">
    <div class="jumbotron">
        <h1>CENTRALiZE</h1>
        <p>Nous centralizons vos données pour vous</p>
    </div>

{% macro show_result(results) %}
<table style="border: 1px dashed lightgrey">
    {% for key,value in results %}
        <tr>
            <td style="border: 1px dashed grey">{{ key }}</td>
            {% if value is defined %}
                {% if value is iterable %}
                    <td style="border: 1px dashed lightgrey">{{ _self.show_result(value) }}</td>
                {% else %}
                    <td style="border: 1px dashed lightgrey">{{ value }}</td>
                {% endif %}
            {% endif %}
        </tr>
    {% endfor %}
</table>
{% endmacro %}

{% import _self as macros %}

{% if results|length != 0 %}
    {{ macros.show_result(results) }}
{% else %}
    Aucun resultat retourné
{% endif %}
</div>
</body>